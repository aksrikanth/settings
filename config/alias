if [ `which dircolors` ]; then
  eval "`dircolors`"
  alias ls='ls --color=auto'
elif [ `which gdircolors` ]; then
  eval "`gdircolors`"
  alias ls='ls -G'
fi

alias ps='ps U $USER'
alias vi='2>/dev/null gvim'
alias mplayer='mplayer -stop-xscreensaver'
alias mloud='mplayer -af volume=20.1:0'
alias mlouder='mplayer -af volume=30.1:0'
alias msoft='mplayer -af volume=-30.1:0'

alias java='java -Xms16m -Xmx1024m'
alias webcam='mplayer -tv driver=v4l2:device=/dev/video0:width=640:height=480:fps=30 tv://'

alias glog='git log --author=srikanth --no-merges'
alias gnew='git log --author=srikanth --no-merges origin/master..HEAD'
alias glast='git log origin/master@{1}..origin/master@{0}'

alias be='bundle exec'
alias c='bundle exec rails console'
alias r='bundle exec rake'
alias s='bundle exec rails server thin'
alias t='bundle exec rspec'
