[color]
  ui = auto
[color "branch"]
  current = green reverse
  local = cyan
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = green
  changed = cyan
  untracked = red
[pack]
  threads = 0
[diff]
  renamelimit = 0
  renames = true
[core]
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[branch]
  autosetupmerge = true
[push]
  default = current
[alias]
  f = fetch --prune origin
  ls = log --pretty=format:'%Cred%h%Creset - %C(bold blue)%an%Creset - %s %Cgreen(%cr)' --abbrev-commit
  m = merge @{u}
  new = log --author=Srikanth --no-merges @{u}..HEAD
  r = rebase @{u}
[http]
  postBuffer = 524288000
